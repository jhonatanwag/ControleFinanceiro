<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">

	<p:dialog showEffect="explode" closable="false" hideEffect="explode"
		header="Subgrupo" widgetVar="DlgSubGrupo" modal="true" dynamic="true"
		resizable="true" toggleSpeed="500" appendTo="@(boby)">
		<h:form id="formDialogSubGrupo">
			<p:messages id="messagesSubGrupo" closable="true" autoUpdate="true" />
			<p:panelGrid id="painelSubGrupo" columns="2" style="margin-top: 20px">

				<p:outputLabel value="Subgrupo" for="desc" />
				<p:inputText id="desc" class="uppercase campo90"
					converter="#{upperToCaseConverter}" maxlength="60" disabled="false"
					required="true"
					value="#{cadastroGrupoBean.subGrupoSelecionado.descricao}" />
			</p:panelGrid>

			<h:panelGrid rendered="true" columns="3" cellpadding="5"
				style="margin: 0 auto;">
				<p:commandButton id="bntConfirmar" value="Confirmar"
					actionListener="#{cadastroGrupoBean.confirmarSubGrupo}"
					update=":formDialogSubGrupo, :form:tabView:tabelaSubGrupo"
					oncomplete="if (!args.validationFailed) PF('DlgSubGrupo').hide();" />

				<p:commandButton id="bntCancelar" value="Cancelar" immediate="true"
					oncomplete="PF('DlgSubGrupo').hide();">
				</p:commandButton>
			</h:panelGrid>
		</h:form>
	</p:dialog>
</ui:composition>